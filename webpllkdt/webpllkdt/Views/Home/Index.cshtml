@model List<webpllkdt.Models.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@{
    <style>
        .card-img {
            height: 200px;
        }
    </style>
}
<div style="background-color: white ;padding: 10px;border-radius: 10px" class="row m-auto">
    <div class="col-10 acer-heading">
        Acer
    </div>
    <div class="col-2 align-self-center gray">
        <a class="xemtatca" href="/sanpham/index">Xem tất cả ></a>
    </div>
</div>
<div class="row row-cols-5">
    @foreach (var item in Model)
    {
        <div class="col mt-2 mb-3">
            <a style="text-decoration: none" href="/sanpham/chitietsanpham?id=@item.MaSP">
                <div class="card">
                    <div class="card-img p-3 position-relative">
                        <img class="w-100" src="~/img/HinhAnh/@(item.TenSP.Trim()).png" alt="Alternate Text" />
                    </div>
                    <div class="card-body">
                        <p style="display: block; display: -webkit-box; -webkit-line-clamp: 1; /* số dòng hiển thị */ -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis; " class="card-title text-black">
                            @item.TenSP
                        </p>
                        <p style="height: 80px;" class="card-text text-primary">
                            <span style="color: rgb(230, 152, 58); font-weight: 500; font-size: 12px; line-height: 16px; ">Còn @item.SoLuong sản phẩm</span> <br />
                            <span style="font-size: 15px; font-weight: 700; color: rgb(20, 53, 195);line-height: 24px ">@item.GiaBan.Value.ToString("C")</span> <br />
                        </p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
<div style="width: 1150px;margin: 0 auto; margin-bottom: 15px" class="hover-img">
    <img class="w-100 m-auto rounded-3" src="~/img/ThuongHieu/Banner-laptop.png" alt="Alternate Text" />
</div>

<style>
    .hover-img:hover img {
        transform: scale(1.05);
        transition-duration: .7s;
    }
</style>

<div>
    <h4>Thương hiệu nổi bật</h4>
    <div class="d-flex flex-row mb-3">
        <div style="width:300px;margin: 10px" class="hover-img text-center">
            <img class="w-100 rounded-3" src="~/img/ThuongHieu/ThuongHieu-Acer.png" alt="Alternate Text" />
            <p style="width: 100px;margin: 0 auto; font-weight: bold" class="mt-3">Acer</p>
        </div>
        <div style="width:300px;margin: 10px" class="hover-img text-center">
            <img class="w-100 rounded-3" src="~/img/ThuongHieu/ThuongHieu-ASUS.png" alt="Alternate Text" />
            <p style="width: 100px;margin: 0 auto; font-weight: bold" class="mt-3">ASUS</p>
        </div>
        <div style="width:300px;margin: 10px" class="hover-img text-center">
            <img class="w-100 rounded-3" src="~/img/ThuongHieu/ThuongHieu-Lenovo.png" alt="Alternate Text" />
            <p style="width: 100px;margin: 0 auto; font-weight: bold" class="mt-3">Lenovo</p>
        </div>
        <div style="width:300px;margin: 10px" class="hover-img text-center">
            <img class="w-100 rounded-3" src="~/img/ThuongHieu/ThuongHieu-Microsoft.png" alt="Alternate Text" />
            <p style="width: 100px;margin: 0 auto; font-weight: bold" class="mt-3">Microsoft</p>
        </div>
    </div>
</div>

<div class="d-flex flex-row mb-3">
    <div style="width: 400px; margin: 15px" class="hover-img">
        <img class="w-100 rounded-3" src="~/img/ThuongHieu/QC-1.png" alt="Alternate Text" />
    </div>
    <div style="width: 400px; margin: 15px" class="hover-img">
        <img class="w-100 rounded-3" src="~/img/ThuongHieu/QC-2.png" alt="Alternate Text" />
    </div>
    <div style="width: 400px; margin: 15px" class="hover-img">
        <img class="w-100 rounded-3" src="~/img/ThuongHieu/QC-2.png" alt="Alternate Text" />
    </div>
</div>

<div style="background-color: white ;padding: 10px;border-radius: 10px" class="row m-auto">
    <div class="col-10 acer-heading">
        MSI
    </div>
