@model webpllkdt.ViewModel.RegisterVM

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Register</h2>
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
<div class="row">
    <div class="col-md-6">
        @Html.LabelFor(temp => temp.Username)
        @Html.TextBoxFor(temp => temp.Username, new { placeholder = "Tài khoản", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Username)
    </div>
    <div class="col-md-6">
        @Html.LabelFor(temp => temp.Email)
        @Html.TextBoxFor(temp => temp.Email, new { placeholder = "Email", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Email)
    </div>
    <div class="col-md-6">
        @Html.LabelFor(temp => temp.Password)
        @Html.PasswordFor(temp => temp.Password, new { placeholder = "Mật khẩu", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Password)
    </div>
    <div class="col-md-6">
        @Html.LabelFor(temp => temp.ComfirmPassword)
        @Html.PasswordFor(temp => temp.ComfirmPassword, new { placeholder = "Mật khẩu xác nhận", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.ComfirmPassword)
    </div>
    <div class="col-md-6">
        @Html.LabelFor(temp => temp.Mobile)
        @Html.TextBoxFor(temp => temp.Mobile, new { placeholder = "Số điện thoại", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Mobile)
    </div>
    <div class="col-md-6">
        @Html.LabelFor(temp => temp.DateOfBirth)
        @Html.TextBoxFor(temp => temp.DateOfBirth, new { placeholder = "Ngày sinh", @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(temp => temp.DateOfBirth)
    </div>
    <div class="col-md-6">
        @Html.LabelFor(temp => temp.Address)
        @Html.TextBoxFor(temp => temp.Address, new { placeholder = "Địa chỉ", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Address)
    </div>
    <div class="col-md-6">
        @Html.LabelFor(temp => temp.City)
        @Html.TextBoxFor(temp => temp.City, new { placeholder = "Địa chỉ", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.City)
    </div>
</div>
<button type="submit" class="btn btn-success">Đăng ký</button>
}
