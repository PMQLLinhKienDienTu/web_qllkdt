@model webpllkdt.ViewModel.RegisterVM

@{ ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml"; }

<div class="d-flex justify-content-center">
    <h1 style="font-weight: 700">Đăng Ký</h1>
</div>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
<div class="row w-25 mx-auto">
    <div class="col-md-12">
        @Html.LabelFor(temp => temp.Username, "Tài khoản")
        @Html.TextBoxFor(temp => temp.Username, new { placeholder = "Username", @class = "form-control mt-2 mb-2" })
        @Html.ValidationMessageFor(temp => temp.Username)
    </div>
    <div class="col-md-12">
        @Html.LabelFor(temp => temp.Email)
        @Html.TextBoxFor(temp => temp.Email, new { placeholder = "Email", @class = "form-control mt-2 mb-2" })
        @Html.ValidationMessageFor(temp => temp.Email)
    </div>
    <div class="col-md-12">
        @Html.LabelFor(temp => temp.Password, "Mật khẩu")
        @Html.PasswordFor(temp => temp.Password, new { placeholder = "Password", @class = "form-control mt-2 mb-2" })
        @Html.ValidationMessageFor(temp => temp.Password)
    </div>
    <div class="col-md-12">
        @Html.LabelFor(temp => temp.ComfirmPassword, "Xác nhận mật khẩu ")
        @Html.PasswordFor(temp => temp.ComfirmPassword, new { placeholder = "ConfirmPassword", @class = "form-control mt-2 mb-2" })
        @Html.ValidationMessageFor(temp => temp.ComfirmPassword)
    </div>

    <div class="col-md-12 d-flex justify-content-center">
        <button type="submit" class="btn btn-dark mt-3 mb-3">Đăng Ký</button>
    </div>
</div>}