@model webpllkdt.Models.SanPham

@{
    ViewBag.Title = "EditSanPham";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}
<div style="width: 100%">
    <div style="width: 900px; margin: 0 auto; text-align:center;font-size: 30px;font-weight:bold; color:cyan; text-shadow: 2px 3px 5px #808080">
        <p>@Model.TenSP</p>
    </div>
</div>
<form action="/admin/admin/editsanpham?ID=@Model.MaSP" method="post">

    @*<input class="form-control" type="hidden" name="ID" value="@Model.ID" />*@
    <input class="form-control" type="hidden" name="ID" id="ID" value="@Model.MaSP" />
    <div class="row">
        <div class="col-md-6">
            <label for="SoLuong">Số lượng tồn</label>
            <input class="form-control" type="text" name="SoLuong" id="SoLuong" value="@if (Model.SoLuong !=null)
            {
                @Model.SoLuong.ToString().Trim()
            }
            " />
        </div>
        <div class="col-md-6">
            <label for="GiaNhap">Giá nhập</label>
            <input class="form-control" type="text" name="GiaNhap" id="GiaNhap" value="@if (Model.GiaNhap!=null)
            {
                @Model.GiaNhap
            }
            " />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="GiaBan">Giá bán</label>
            <input class="form-control" type="text" name="GiaBan" id="GiaBan" value="@if (Model.GiaBan!=null)
            {
                @Model.GiaBan
            }
            " />
        </div>
        <div class="col-md-6">
            <label for="GhiChu">Mô tả</label>
            <input class="form-control" type="text" name="GhiChu" id="GhiChu" value="@if (Model.GhiChu!=null)
            {
                @Model.GhiChu.ToString().Trim()
            }
            " />
        </div>
    </div>
    <div class="mt-3 mb-3">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a href="/admin/admin/quanly" class="btn btn-danger">Quay lại</a>
    </div>

</form>

